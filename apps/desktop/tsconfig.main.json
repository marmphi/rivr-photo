  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "outDir": "dist/main",
    "rootDir": "main",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "main/**/*.ts"
  ]
}